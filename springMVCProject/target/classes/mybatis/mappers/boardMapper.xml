<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shinhan.board"><!-- 대부분은 회사, 업무명을 써서 넣음, 임의 설정 가능 -->
  <select id="selectAll" resultType="boardvo">
    select * from TBL_BOARD
  </select>
   <select id="selectById" parameterType="int" resultType="boardvo">
    select * from TBL_BOARD where bno = #{bno}
  </select>
<!--   <insert id="boardInsert" parameterType="boardvo"> -->
<!-- 	insert into TBL_BOARD(bno, title, content, writer, pic) -->
<!-- 	values(seq_board_bno.nextval,#{title},#{content},#{writer},#{pic}) -->
<!--   </insert> -->
  <update id="boardUpdate" parameterType="boardvo">
	update TBL_BOARD set title=#{title}, content=#{content}, pic=#{pic}
	where bno=#{bno}
  </update>
  <delete id="boardDelete" parameterType="int">
  	delete from TBL_BOARD where bno=#{bno}
  </delete>
</mapper>